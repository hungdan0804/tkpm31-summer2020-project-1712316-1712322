<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Component.initializeHabit.InitializeHabitActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:minHeight="@dimen/_35sdp"
        android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/cardview_light_background"
                app:contentInsetStart="0dp"
                app:titleTextColor="@android:color/white"
                >
                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_app"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/decor_circle"
                        android:outlineProvider="background"
                        android:layout_weight="1"
                        android:src="@drawable/icon_app"/>

                    <TextView
                        android:id="@+id/app_title"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:layout_gravity="center"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>

                    <ImageButton
                        android:id="@+id/btn_insert"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check_black_24dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/decor_circle"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_close_black_24dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/decor_circle"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="@dimen/_2sdp"
                app:strokeColor="@color/stroke_color"
                app:cardElevation="0sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_habit_name"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_habit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textSize="@dimen/_15sdp"
                        android:hint="@string/msg_hint_habit_name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_type"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/type_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_type_default"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            />
                        <TextView
                            android:id="@+id/type_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_starting_day"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/dot_dark_screen"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_starting_day"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/startingDay_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_starting_day_default"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            />
                        <TextView
                            android:id="@+id/startingDay_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_starting_day"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/dot_dark_screen"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_trainning_days"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                       >

                        <com.google.android.material.slider.Slider
                            android:id="@+id/daysTrainning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueTo="100"
                            android:valueFrom="2"
                            android:value="7"
                            android:stepSize="1"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/daysTrainning_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:text="@string/msg_days"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                app:strokeWidth="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/stroke_color"
                app:cardElevation="0sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:text="@string/msg_thumnail"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <ImageButton
                        android:id="@+id/thumbnail"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/ic_add_black_24dp"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                app:strokeWidth="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/stroke_color"
                app:cardElevation="0sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_reminder"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_repetition"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/repetition_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_repetition_default"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            />
                        <TextView
                            android:id="@+id/repetition_days_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_starting_day"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/dot_dark_screen"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_daily_repetition"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_start"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/start_repetition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_daily_repetition_default"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            />
                        <TextView
                            android:id="@+id/start_repetition_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_set_time"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/dot_dark_screen"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_end"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/end_repetition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_daily_repetition_default"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            />
                        <TextView
                            android:id="@+id/end_repetition_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_set_time"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/dot_dark_screen"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="@dimen/_2sdp"
                app:strokeColor="@color/stroke_color"
                app:cardElevation="0sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_description"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <EditText
                        android:id="@+id/edt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:background="@color/stroke_color"
                        android:layout_margin="@dimen/_10sdp"
                        android:padding="5dp"
                        android:gravity="top"
                        android:lines="8"
                        android:maxLines="10"
                        android:minLines="6"
                        android:maxLength="200"
                        android:scrollbars="vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>